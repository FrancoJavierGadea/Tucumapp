---
const {image, alt, title, direction = 'Las Piedras'} = Astro.props;
---


<div class="Bus-card">

    <img src={image} alt={alt} >

    <div class="Bus-card-content">

        <h4>{title}</h4>

        <p>{direction}</p>
    </div>

</div>

<style>
    .Bus-card {

        height: 120px;
        display: flex;
        border-radius: 5px;
        overflow: hidden;
        cursor: pointer;

        &:hover .Bus-card-content {
            background-color: #cecece;
        }

        img {
            display: block;
            height: 100%;
            object-fit: cover;
            aspect-ratio: 1;
        }
        
        .Bus-card-content {
            padding: 10px;
            background-color: #ffffff;
            flex-grow: 1;
            display: flex;
            flex-direction: column;

            h4 {
                font-size: 18px;
                letter-spacing: 1px;
            }
        }
    }
</style>