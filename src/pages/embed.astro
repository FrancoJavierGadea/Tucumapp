---

import Logo from "@/components/Logo.astro";
import Layout from "@/layouts/Layout.astro";

---


<Layout title="Embed">

    <div class="Container">

        <iframe src="/" />
    </div>

    <Logo />

</Layout>

<style>
    .Container {
        width: 600px;
        height: 400px;
        margin: 50px auto;

        outline: 1px dashed gray;
        overflow: hidden;
        resize: both;

        iframe {
            display: block;
            width: 100%;
            height: 100%;
            border: none;
        }
    }

</style>
